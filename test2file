pipeline {

    agent any

    environment {
        NEW_VERSION = "1.3.0"
    }

    stages {

        stage ("build") {

        

            steps {

                echo "I am building.."
                echo "Building ${NEW_VERSION} "
            }
        }

        stage ("test") {

            steps {

                echo "I am testing.."
            }
        }

        stage ("deploy") {

            steps {

                echo "I am deploying.."
            }
        }
    }
    post {
        always {
            echo "We are testing the pipeline"
        }

        success {

            echo "Our pipeline is successfully run"
        }

        failure {

            echo "Our pipeline failed"
        }
    }
}
