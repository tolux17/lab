pipeline {

    agent any

    stages {

        stage ("build") {

            steps {

                echo 'BUILDING APPLICATION'
            }
        }

        stage ("test") {

            steps {

                echo 'TESTING APPLICATION'
            }
        }

        stage ("deploy") {

            steps {

                echo "DEPLOYING APPLICATION"
            }
        }
    }

    post {
        always {

            echo "Application Ran"
        }

        success {

            echo "Application succeded"
        }

        failure {

            echo "Application failed woefully"
        }


    }
}